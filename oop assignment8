					import java.io.File;

public class creatingfile {
						public static void main(String[]args) {
								   
									try {
										File  f1= new File ("assign7.txt");
										if(f1.createNewFile()) {
											System.out.println("File Created");
											
										}
										else {
											System.out.println("File Exists");
										}
										FileWriter f=new FileWriter("assign7.txt");
										f.append("krishna ganjewar");
										f.append("\nhello krishna");
										f.close();
									}
									catch(IOException e) {
										System.out.println(e);
									}
							}

						}
	
